<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Contract #</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client.contracts.each do |contract| %>
      <tr>
        <td><%= contract.contract_num %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
