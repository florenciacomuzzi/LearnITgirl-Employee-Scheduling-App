<p id="notice"><%= notice %></p>

<h1>Listing Blocks</h1>

<h3><%= Time.now.strftime("It is %I:%M%p right now...") %> </h3>
<br>

<table>
  <thead>
    <tr>
      <td>Start Time</td>
      <td>End Time</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.start_time.to_formatted_s(:time) %>   </td>
        <td><%= block.end_time.to_formatted_s(:time) %>   </td>
        <td><%= link_to 'Show', block %></td>
        <td><%= link_to 'Edit', edit_block_path(block) %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



